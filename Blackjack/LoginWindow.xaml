<Window x:Class="Blackjack.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack"
        mc:Ignorable="d"
        Title="Login" Height="187.93" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="-2,0,2,0">
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="163,105,0,0" VerticalAlignment="Top" Width="80" Height="22" IsCancel="True" Click="btnCancel_Click"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="54,105,0,0" VerticalAlignment="Top" Width="80" Height="22" Click="btnLogin_Click"/>
        <Label x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" Margin="42,31,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="42,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxUsername" HorizontalAlignment="Left" Height="23" Margin="123,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtBoxPassword" HorizontalAlignment="Left" Margin="123,62,0,0" VerticalAlignment="Top" Width="120" Height="23"/>

    </Grid>
</Window>
